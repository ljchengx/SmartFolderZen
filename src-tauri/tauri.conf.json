{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "smart_folder_zen",
  "version": "1.0.1",
  "identifier": "com.smartfolderzen.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5174",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Smart Folder Zen",
        "width": 720,
        "height": 600,
        "resizable": false,
        "minimizable": true,
        "maximizable": false,
        "skipTaskbar": true,
        "visible": false,
        "decorations": true,
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
